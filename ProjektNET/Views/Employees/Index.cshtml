@model List<ProjektNET.Models.Domain.Employee>

@{
}
<h1>Pracownicy</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Imię</th>
            <th>Adres Email</th>
            <th>Wysokość pensji[zł]</th>
            <th>Data urodzenia</th>
            <th>Stanowisko</th>
            <th> </th>
        </tr>
    </thead>    
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
                <td>@employee.Department</td>
                <td><a href="Employees/View/@employee.Id">Zobacz</a></td>

            </tr>
        }
    </tbody>
</table>